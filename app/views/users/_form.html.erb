<%= bootstrap_form_for(@user) do |form| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.text_field :first_name, :required => true %>
  </div>

  <div class="field">
    <%= form.text_field :last_name, :required => true %>
  </div>

  <div class="field">
    <%= form.text_field :login, :required => true %>
  </div>

  <div class="field">
    <%= form.email_field :email, :required => true %>
  </div>

  <div class="field">
    <%= form.number_field :age %>
  </div>

  <div class="field">
    <%= form.select :gender, User::GENDER_ARR %>
  </div>

  <div class="field">
    <%= form.text_field :mobile_number, :required => true %>
  </div>

  <div class="field">
    <%= form.text_field :home_number %>
  </div>

  <div class="field">
    <%= form.text_field :work_number %>
  </div>

  <div class="field">
    <%= form.text_area :address %>
  </div>

  <div class="field">
    <%= form.text_field :city %>
  </div>

  <div class="field">
    <%= form.text_field :state %>
  </div>

  <div class="field">
    <%= form.text_field :country %>
  </div>
  
  <div class="field">
    <%= form.text_field :pin_code %>
  </div>

  <div class="field">
    <%= form.password_field :crypted_password, help: "Must be at least 6 characters long", :required => true %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
